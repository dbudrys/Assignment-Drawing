<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="350dp"
    android:layout_gravity="center"

    tools:context="com.dustin_domas_assignment.domasdraing.ColorPicker"
    android:weightSum="1">
    <Button
        android:id="@+id/btn_select"
        android:layout_width="match_parent"
        android:background="@android:color/white"
        android:clickable="true"
        android:text="Press HERE When Completed"
        android:textColor="#5DBCD2"
        android:textStyle="bold"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="center"
        android:orientation="horizontal">


        <SeekBar
            android:id="@+id/red_seekbar"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_below="@id/btn_select"
            android:layout_margin="10dp" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <SeekBar
            android:id="@+id/green_seekbar"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_alignBottom="@+id/red_seekbar"
            android:layout_below="@id/red_seekbar"
            android:layout_margin="10dp" />



    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <SeekBar
            android:id="@+id/blue_seekbar"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_alignBottom="@+id/green_seekbar"
            android:layout_below="@id/green_seekbar"
            android:layout_margin="10dp" />
    </LinearLayout>
    <![CDATA[ />


]]>
</LinearLayout>